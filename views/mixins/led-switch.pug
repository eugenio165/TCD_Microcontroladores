style(type='text/css').
    .led-box {
        height: 30px;
        width: 25%;
        margin: 10px 0;
        float: left;
    }

    .led-box p {
        font-size: 12px;
        text-align: center;
        margin: 1em;
    }

    .led-red {
        margin: 0 auto;
        width: 24px;
        height: 24px;
        background-color: #F00;
        border-radius: 50%;
        box-shadow: rgba(0, 0, 0, 0.2) 0 -1px 7px 1px, inset #441313 0 -1px 9px, rgba(255, 0, 0, 0.5) 0 2px 12px;
        -webkit-animation: blinkRed 0.5s infinite;
        -moz-animation: blinkRed 0.5s infinite;
        -ms-animation: blinkRed 0.5s infinite;
        -o-animation: blinkRed 0.5s infinite;
        animation: blinkRed 0.5s infinite;
    }

    .led-green {
        margin: 0 auto;
        width: 24px;
        height: 24px;
        background-color: #ABFF00;
        border-radius: 50%;
        box-shadow: rgba(0, 0, 0, 0.2) 0 -1px 7px 1px, inset #304701 0 -1px 9px, #89FF00 0 2px 12px;
    }
    .card-title {
        padding-top: 7px;
    }

    .row {
        margin-top: 30px;
    }

    .card {
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .loader {
        height: 150px;
    }

    .green {
        color: green;
    }

    .red {
        color: rgb(241, 97, 78);
    }

    .ledinfo { 
        display: flex; 
        justify-content: space-between;
    }

mixin ledswitch(index, state)
    .col-12.col-sm-6.col-md-4.col-xl-3
        .card
            .card-body
                .d-flex.ledinfo
                    h5.card-title LED #{index}
                    .align-end
                        .led-box
                            div(class= state ? 'led-green' : 'led-red')
                .d-flex.justify-content-center.flex-column.text-center
                    if (state == true)
                        btn.btn.btn-danger APAGAR
                    else if (state == false)
                        btn.btn.btn-success LIGAR
                    else
                        div
                            .d-flex.justify-content-center
                                .spinner-border